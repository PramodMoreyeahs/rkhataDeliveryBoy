<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="12">

        <androidx.cardview.widget.CardView
            android:id="@+id/ll_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="10dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/tv_po_id"
                        style="@style/SegoeUISemiBold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Order ID:4520111"
                        android:textColor="@color/Black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/price"
                        style="@style/SegoeUISemiBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs.2135"
                        android:textColor="@color/Black"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/created_date"
                        style="@style/SegoeUISemiBold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Today at 12.33 pm"
                        android:textColor="@color/grey"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_supplier_name"
                        style="@style/SegoeUISemiBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="name"
                        android:textColor="@color/grey"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/tv_adv_amt"
                        style="@style/SegoeUISemiBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rs.2135"
                        android:textColor="@color/Black"
                        android:textSize="15sp" />

                    <TextView
                        android:gravity="end"
                        android:id="@+id/tv_rem_amt"
                        android:layout_weight="1"
                        style="@style/SegoeUISemiBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rs.2135"
                        android:textColor="@color/Black"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/tv_address"
                        style="@style/SegoeUI"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address:"
                        android:textColor="#636167"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/call_supplier"
                        card_view:srcCompat="@drawable/ic_phone_call"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/SegoeUI"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Order Status :"
                        android:textColor="#636167"
                        android:textSize="12sp" />


                    <TextView
                        android:id="@+id/order_statu_txt"
                        style="@style/SegoeUIBold"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/pading_bottom_5"
                        android:layout_marginEnd="@dimen/text_margin_5"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:text="Order Dispached"
                        android:textColor="@color/colorAccent"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="@dimen/view_padding_10"
                        android:background="@drawable/ic_orderlist">

                        <TextView
                            android:id="@+id/btn_direction"
                            style="@style/SegoeUIBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/view_padding_15"
                            android:gravity="center"
                            android:text="Direction"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="13sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drwable_view_details">

                    <TextView
                        android:id="@+id/view_details"
                        style="@style/SegoeUIBold"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="View Detail"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>