<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_splace_logo_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_rkhata_logo" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                >

                <in.moreyeahs.livspace.delivery.font.TextViewSFRegular
                    style="@style/CommanStyleSF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/valid_moboile_no"
                    android:textColor="#373737"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_weight="0.5">

                <in.moreyeahs.livspace.delivery.font.TextViewSFRegular
                    style="@style/CommanStyleSF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/msg_sendyou_otp"
                    android:textColor="#373737"
                    android:textSize="13sp" />
            </LinearLayout>



            <androidx.cardview.widget.CardView
                android:layout_width="302dp"
                android:layout_height="59dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:elevation="10dp"
                app:cardCornerRadius="25dp"
                card_view:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="302dp"
                    android:layout_height="59dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                   >


                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="@dimen/font_size_30"
                        android:background="@drawable/ic_mob_icon"/>

                    <in.moreyeahs.livspace.delivery.font.EditTextOpensansRegular
                        android:id="@+id/et_phoneno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"

                        android:background="@drawable/textboxshape"
                        android:hint="@string/entermobilenumber"
                        android:textSize="13sp"
                        android:inputType="number"
                        android:maxLength="10"
                        android:textColor="@color/black" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/submit_number"
                    android:layout_width="140dp"
                    android:layout_height="110dp"
                    android:src="@drawable/next" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</layout>